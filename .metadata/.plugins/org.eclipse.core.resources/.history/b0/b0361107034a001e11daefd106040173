package SpriteSheet;

import java.awt.image.BufferedImage;
import java.io.File;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;
import javax.swing.JLabel;

import lombok.Data;

@Data

public class SpriteSheet extends JLabel{
	private final static String TAG = "SpriteSheet:";
	private BufferedImage imgSprite;
	private String url;
	private String gubun;
	private int xPos,yPos, width, height;
	private ImageIcon imgicon;
	
	public SpriteSheet() {}
	
	public SpriteSheet(String url, String gubun, int xPos, int yPos, int width, int height) {
		this.url = url;
		this.gubun = gubun;
		this.xPos = xPos;
		this.yPos = yPos;
		this.width = width;
		this.height = height;
	
	}
	public void loadSpriteimage(String url) {
		try {
			imgSprite = ImageIO.read(new File(url));
		}catch (Exception e) {
			System.out.println(TAG+"이미지 로드 실패");
		}
	}
	public void getObjimg() {
		return imgSprite.getSubimage(xPos, yPos, width, height);
	}
	
	public void getObj(int x, int y) {
		imgObj = new ImageIcon(getOb)
	}
	
	
}
